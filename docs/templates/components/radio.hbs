<div id="radio" class="component">
    <div class="component-title">Radio</div>
    <div class="component-content">
        <div class="component-header">Radio default</div>
        <div class="component-example">
            <div class="eve-radio">
                <input class="eve-radio-native" type="radio">
                <div class="eve-radio-mark"></div>
            </div>
        </div>
    </div>
    <div class="component-content">
        <div class="component-header">Radio disabled</div>
        <div class="component-example">
            <div class="eve-radio eve-radio-disable">
                <input class="eve-radio-native" type="radio">
                <div class="eve-radio-mark"></div>
            </div>
        </div>
    </div>
    <div class="component-content">
        <div class="component-header">Radio control</div>
        <div class="component-example">
            <label class="eve-radio-control">
                <div class="eve-radio">
                    <input class="eve-radio-native" type="radio">
                    <div class="eve-radio-mark"></div>
                </div>
                Radio control #1
            </label>
        </div>
    </div>
    <div class="component-content">
        <div class="component-header">Radio controls group</div>
        <div class="component-example">
            <div class="eve-radio-group">
                <label class="eve-radio-control">
                    <div class="eve-radio">
                        <input class="eve-radio-native" type="radio" name="eve-radio">
                        <div class="eve-radio-mark"></div>
                    </div>
                    Radio control #1
                </label>
                <label class="eve-radio-control">
                    <div class="eve-radio">
                        <input class="eve-radio-native" type="radio" name="eve-radio">
                        <div class="eve-radio-mark"></div>
                    </div>
                    Radio control #2
                </label>
            </div>
        </div>
    </div>
    <div class="component-content">
        <div class="component-header">Radio controls list</div>
        <div class="component-example">
            <div class="eve-radio-list">
                <label class="eve-radio-control">
                    <div class="eve-radio">
                        <input class="eve-radio-native" type="radio" name="eve-radio2">
                        <div class="eve-radio-mark"></div>
                    </div>
                    Radio control #1
                </label>
                <label class="eve-radio-control">
                    <div class="eve-radio">
                        <input class="eve-radio-native" type="radio" name="eve-radio2">
                        <div class="eve-radio-mark"></div>
                    </div>
                    Radio control #2
                </label>
            </div>
        </div>
    </div>
</div>
